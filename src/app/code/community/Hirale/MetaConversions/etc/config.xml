<?xml version="1.0"?>
<config>
    <modules>
        <Hirale_MetaConversions>
            <version>0.1.0</version>
        </Hirale_MetaConversions>
    </modules>
    <global>
        <models>
            <metaconversions>
                <class>Hirale_MetaConversions_Model</class>
            </metaconversions>
        </models>
        <helpers>
            <metaconversions>
                <class>Hirale_MetaConversions_Helper</class>
            </metaconversions>
        </helpers>
    </global>
    <frontend>
        <events>
            <sales_quote_item_save_after>
                <observers>
                    <metaconversions_sales_quote_item_save_after>
                        <type>singleton</type>
                        <class>metaconversions/observer</class>
                        <method>addToCart</method>
                    </metaconversions_sales_quote_item_save_after>
                </observers>
            </sales_quote_item_save_after>
            <wishlist_product_add_after>
                <observers>
                    <metaconversions_wishlist_product_add_after>
                        <type>singleton</type>
                        <class>metaconversions/observer</class>
                        <method>addToWishlist</method>
                    </metaconversions_wishlist_product_add_after>
                </observers>
            </wishlist_product_add_after>
            <customer_register_success>
                <observers>
                    <metaconversions_customer_register_success>
                        <type>singleton</type>
                        <class>metaconversions/observer</class>
                        <method>completeRegistration</method>
                    </metaconversions_customer_register_success>
                </observers>
            </customer_register_success>
            <core_app_run_after>
                <observers>
                    <metaconversions_core_app_run_after>
                        <type>singleton</type>
                        <class>metaconversions/observer</class>
                        <method>dispatchRouteEvent</method>
                    </metaconversions_core_app_run_after>
                </observers>
            </core_app_run_after>
        </events>
    </frontend>
</config>